<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Escala do Bar Mutantes</title>
    <!-- Incluindo Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center">
        <h1 class="mt-5">Escala do Bar Mutantes</h1>
        <ul class="list-group mt-3">
            <% schedules.forEach(function(schedule) { %>
                <li class="list-group-item<%= new Date().toLocaleDateString('pt-BR') === schedule.date ? ' active' : '' %>">
                    <%= schedule.date %>: <%= schedule.vest %> (Colete), <%= schedule.pp %> (PP)
                </li>
            <% }); %>
        </ul>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
